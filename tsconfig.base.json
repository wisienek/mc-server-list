{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "strictPropertyInitialization": false,
        "rootDir": ".",
        "types": ["node", "jest"],
        "jsx": "react-jsx",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "commonjs",
        "lib": ["es2017", "dom", "esnext"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "@api/*": ["apps/server/*"],
            "@backend/config": ["libs/backend/config/src/index.ts"],
            "@backend/logger": ["libs/backend/logger/src/index.ts"],
            "@front/*": ["apps/front/*"],
            "@lib/front/components/*": ["libs/frontend/components/src/*"],
            "@lib/types": ["libs/shared/types/src/index.ts"],
            "@shared/dto": ["libs/shared/dto/src/index.ts"],
            "@shared/enums": ["libs/shared/enums/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
